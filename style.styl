@import 'base'
@import 'node_modules/nib/lib/nib/'

global-reset()
nested-reset()
reset-font()
reset-box-model()
reset-body()
reset-table()
reset-table-cell()
reset-html5()

html
  height 100%
  position relative

body
  background-color $bgColor
  width 100%
  height 100%
  font 12px $baseTahoma

.bg-grad
  position relative
  min-width 900px

  &:before
    z-index 0
    content ""
    position absolute
    left 0
    right 0
    top 0
    height 7px
    border-top 1px solid #ebebeb
    background-color #80a823
    background linear-gradient(to bottom, #a3ba68 0%,#9ec149 17%,#95c130 33%,#8dbf20 50%,#83b60f 67%,#83b50b 83%,#80a823 100%)

  &:after
    z-index -1
    content ""
    position absolute
    left 0
    right 0
    top 0
    height 435px
    border-top 1px solid #ebebeb
    background-color #606060
    background linear-gradient(to bottom, #606060 0%,#5e5e5e 34%,#585858 46%,#454545 65%,#3f3f3f 75%,#3c3c3c 100%)

.wrapper
  width 862px
  padding 0 19px
  margin 0 auto
  min-height 100%
  height auto !important
  height 100%







/* Header
-----------------------------------------------------------------------------*/
.header
  min-height 185px
  position relative
  padding-top 8px

  &__logo
    position absolute
    top 8px

  &__contact
    position absolute
    right 0
    top 25px
    color $lightGrey
    font-size 24px
    text-align right
    width 200px

  &__contact-tel
    font-size 11px
    color #c6c6c6

  &__contact-lnk
    text-decoration none
    color $linkColor
    border-bottom 1px dashed $linkColor
    font-size 12px
    position: relative;
    top: -8px;

  &__menu
    margin 15px 215px

  &__info
    margin 84px 0 0


@import 'blocks/logo.styl'
@import 'blocks/main-menu.styl'
@import 'blocks/info.styl'
/* Middle
-----------------------------------------------------------------------------*/
.middle
  width 100%
  padding 0 0 147px
  position relative
  &:after
    display table
    clear both
    content ''

.container
  width 100%
  float left
  overflow hidden

.content
  padding 0 270px 0 0

/* Right Sidebar
-----------------------------------------------------------------------------*/
.right-sidebar
  float left
  width 250px
  margin-left -250px
  position relative
  background #FFACAA

/* Footer
-----------------------------------------------------------------------------*/
.footer
  width 862px
  margin -147px auto 0
  height 147px
  background #BFF08E
  position relative

