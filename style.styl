@import 'node_modules/nib/lib/nib/'

global-reset()
nested-reset()
reset-font()
reset-box-model()
reset-body()
reset-table()
reset-table-cell()
reset-html5()

@import 'base'

html
  height 100%
  position relative

body
  background-color $bgColor
  color $darkGrey
  width 100%
  height 100%
  font 12px $baseTahoma

@import 'blocks/bg-grad.styl'

.wrapper
  width 862px
  padding 0 19px
  margin 0 auto
  min-height 100%
  height auto !important
  height 100%


/* Header
-----------------------------------------------------------------------------*/
@import 'blocks/header.styl'
@import 'blocks/logo.styl'
@import 'blocks/main-menu.styl'
@import 'blocks/info.styl'

/* Middle
-----------------------------------------------------------------------------*/
.middle
  width 100%
  padding 0 0 147px
  position relative

  &:after
    display table
    clear both
    content ''

.container
  width 100%
  float left
  margin-bottom: -42px;

.content
  margin 0 227px 0 0
  background $grey
  box-sizing border-box
  padding 10px 25px
  border-radius 10px
  box-shadow $shadow
  position relative
  display block

  &__header
    padding 10px 0 5px

  &__item
    margin-bottom 35px

@import 'blocks/list.styl'
@import 'blocks/slogan.styl'
@import 'blocks/btn-set.styl'
@import 'blocks/clause.styl'
@import 'blocks/spoiler.styl'
@import 'blocks/modal.styl'


/* Right Sidebar
-----------------------------------------------------------------------------*/
.right-sidebar
  float left
  width 195px
  margin-left -203px
  position relative

@import 'blocks/news.styl'

/* Footer
-----------------------------------------------------------------------------*/
.footer
  margin -147px auto 0
  height 147px
  min-width: 900px
  background #959595
  box-sizing border-box
  border-top 2px solid #666666
  z-index -1

  &__content
    margin 80px auto 30px
    text-align center
    width 800px
    color #cfcfcf
    font 11px $baseTahoma
    text-shadow 1px 1px #666666
    position relative



