@import '../base'

.btn-set
  margin 13px 0
  text-align right

  &_type_center
    text-align center

.btn-set__button
  color #ffffff
  font bold 11px/18px $baseVerdana
  border-radius 5px
  border-top 1px solid #81b900
  border-bottom 1px solid #6d8e00
  border-left none
  border-right none
  padding 0 15px
  background-color $linkColor
  background linear-gradient(to bottom, rgba(162,204,70,1) 0%,rgba(153,195,51,1) 18%,rgba(138,181,29,1) 35%,rgba(122,169,1,1) 41%,rgba(110,143,0,1) 100%)
  box-shadow  8px 0 5px -5px #6D8E00 inset
  display inline-block
  text-decoration none
  margin 4px 7px
