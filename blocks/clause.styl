@import '../base'

.clause

  background-color $bgColor
  background  linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
  color #ffffff
  box-sizing border-box
  padding 0 15px
  font bold 14px/35px $baseVerdana
  padding-right 65px
  position relative

  &__switch
    font normal 12px $baseVerdana
    border-bottom 1px dashed #ffffff
    position absolute
    right 15px
    top 10px

  &__content
    font normal 12px $baseVerdana
    padding 10px 0



