@import '../base'

.info
  display block
  font 13px arial, sans-serif
  clearfix()

  &__item
    width 33.3%
    height 256px
    float left
    position relative
    overflow hidden

    &_type_left
      background #565757 url("images/sprite-images.png") 39px 13px no-repeat

    &_type_center
      background #3b3b3b url("images/sprite-images.png") -248px 13px no-repeat

    &_type_right
      background #1f201f url("images/sprite-images.png") -535px 13px no-repeat

  &__item-text
    letter-spacing -1px
    text-decoration none
    display block
    position absolute
    top 203px
    width 100%
    height inherit
    background rgba(0,0,0, .7)
    color #fff
    box-sizing border-box
    padding 10px 12px
    vendor('transition', top 1s ease-out 0.5s)

    &:hover
      top 0

  &__item-t-head
    border-bottom 1px dashed #fff

  &__item-t-par
    margin-bottom 12px

    &:first-child
      min-height 30px

